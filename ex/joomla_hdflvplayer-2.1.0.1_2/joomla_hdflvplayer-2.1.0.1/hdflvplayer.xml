<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.5.0" method="upgrade" client="site">
    <name>HD FLV Player</name>
    <version>2.1.0.1</version>
    <copyright>Copyright (C) 2011 Powered by Apptha</copyright>
